# order
  order += "ipv6"
  order += "ethernet _first_"
  order += "disk /"
  order += "load"
  order += "memory"
  order += "cpu_temperature 0"
  order += "tztime local"

# modules
  general {
    colors = true
    interval = 5
  }
  ethernet _first_ {
    format_up = "E: %ip (%speed)"
    format_down = "E: down"
  }
  # available disk space
  disk "/" {
    format = "DISK: %avail"
  }
  # waiting process per minute
  load {
    format = "PROC: %1min"
  }
  # ram info, see /proc/meminfo
  memory {
    format = "RAM: %percentage_used"
  }
  cpu_temperature 0 {
    format = "CPU: %degrees Â°C"
    path = "/sys/devices/platform/coretemp.0/hwmon/hwmon5/temp1_input"
  }
  tztime local {
    format = "%Y-%m-%d %H:%M:%S"
  }

# unused
  wireless _first_ {
    format_up = "W: (%quality at %essid) %ip"
    format_down = "W: down"
  }
  battery all {
    format = "%status %percentage %remaining"
  }

